{
    "website":"youtube",
    
    "connectionSteps":[
        
        {
            "action":"goTo",
            "url":"https://accounts.google.com/ServiceLogin?sacu=1&continue=https%3A%2F%2Fwww.youtube.com%2Fsignin%3Faction_handle_signin%3Dtrue%26app%3Ddesktop%26feature%3Dsign_in_button%26hl%3Dfr%26next%3D%252F&hl=fr&service=youtube#identifier",
            "fail":{
                "if":"redirected",
                "url":"https://www.youtube.com/#identifier",
                "actions":[{"action":"logOut","cookiesUrl":"https://www.google.fr"},{"action":"retry"}],
                "send":"alreadyConnected"
            }
        },
        
        {
            "action":"fill",
            "fields":[
                {"id":"Email","value":"user"},
            ]
        },
        
        {"action":"click","buttons":["next"]},
        
        {
            "action":"nextPage",
            "fail":{
                "if":"existingFields",
                "fields":["Email"],
                "actions":[],
                "send":"wrongUsername"
            }
        },
        
        {
            "action":"fill",
            "fields":[
                {"id":"Passwd","value":"pass"},
            ]
        },
        
        {"action":"click","buttons":["signIn"]},
        
        {
            "action":"nextPage",
            "fail":{
                "if":"existingFields",
                "fields":["Passwd"],
                "actions":[],
                "send":"wrongPassword"
            }
        }
        
    ],
                                  
    "logOutSteps":[
        {"action":"eraseCookies"}
    ]
}

{
    "website":"facebook",
    
    "connectionSteps":[
        
        {
            "action":"goTo",
            "url":"https://www.facebook.com",
            "fail":{
                "if":"missingFields",
                "fields":["pass"],
               "actions":[],
                "send":"alreadyConnected"
            }
        },
        
        {
            "action":"fill",
            "fields":[
                {"id":"email","value":"user"},
                {"id":"pass","value":"pass"}
            ]
        },
        
        {"action":"click","buttons":["u_0_m","u_0_o"]},
        
        {
            "action":"nextPage",
            "fails":[
                {
                    "if":"existingFields",
                    "fields":["email"],
                    "actions":[],
                    "send":"wrongUsername"
                },
                {
                    "if":"existingFields",
                    "fields":["pass"],
                    "actions":[],
                    "send":"wrongPassword"
                }
            ]
        }
    ],
                            
    "logOutSteps":[
        {"action":"eraseCookies"}
    ]
}

{
    "website":"IESEG Online",
    
    "connectionSteps":[
        
        {
            "action":"goTo",
            "url":"http://www.ieseg-online.com/login/index.php",
            "fail":{
                "if":"missingFields",
                "fields":["password"],
                "actions":[{"action":"logOut"},{"action":"retry"}],
                "send":"alreadyConnected"
            }
        
        },
        
        {
            "action":"fill",
            "fields":[
                {"id":"username","value":"user"},
                {"id":"password","value":"pass"}
            ]
        },
        
        {"action":"click","buttons":["loginbtn"]},
        
        {
            "action":"nextPage",
            "fail":{
                "if":"existingFields",
                "fields":["password"],
                "actions":[{"action":"goTo", "url":"http://www.ieseg-online.com"}],
                "send":"wrongPassword"
            }
        }
    ],
    "logOutSteps":[
        {"action":"eraseCookies"}
    ]
}