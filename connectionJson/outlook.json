{
    "website":"outlook",
    
    "urls":{
        "login":"https://login.live.com/login.srf"
    },
    
    "elements":{
        
        "userField":{
            "tagName":"input",
            "type":"email",
            "name":"loginfmt"
        },
        "passField":{
            "tagName":"input",
            "type":"password",
            "name":"passwd"
        },
        "buttonLogIn":{
            "id":"idSIButton9"
        }
        
    },
    
    "connectionSteps":[
        {
            "action":"goTo",
            "url":"login"
        },
        
        {
                "action":"catchFail",
                "if":"missingElement",
                "elementName":"passField",
                "actionsIfFail":[{"action":"end"}],
                "send":"alreadyConnected"
        },
        
        {
            "action":"do",
            "elements":[
                {
                    "name":"userField",
                    "action":"click"
                },
                {
                    "name":"userField",
                    "action":"fill",
                    "value":"user"
                },
                {
                    "name":"passField",
                    "action":"click"
                },
                {
                    "name":"passField",
                    "action":"fill",
                    "value":"pass"
                },
                {
                    "name":"buttonLogIn",
                    "action":"click"
                }
            ]
        },
        
        {
            "action":"nextPage",
            "lastPage":true
        },
        
        {
            "action":"catchFail",
            "if":"existingElement",
            "elementName":"passField",
            "actionsIfFail":[{"action":"end"}],
            "send":"wrongPassword"
        }
    ]
}
